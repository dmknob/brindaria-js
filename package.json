{
  "name": "brindaria",
  "version": "2.2.0",
  "description": "Sistema Brindaria - Node Express SQLite",
  "main": "app.js",
  "type": "commonjs",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./public/css/styles.css --minify",
    "watch:css": "tailwindcss -i ./src/styles/input.css -o ./public/css/styles.css --watch",
    "db:setup": "node database/setup-db.js",
    "db:dump": "node scripts/dump-db.js",
    "db:restore": "node scripts/restore-db.js"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "better-sqlite3": "^9.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.17.3",
    "helmet": "^7.2.0",
    "morgan": "^1.10.1",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "nodemon": "^3.0.1",
    "tailwindcss": "^3.3.5"
  }
}
