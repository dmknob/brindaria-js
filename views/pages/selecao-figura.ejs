<%- include('../layouts/layout-top') %>

<div class="min-h-screen bg-gray-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-xl shadow-lg border border-gray-100">
        
        <div class="text-center">
            <h2 class="mt-2 text-3xl font-serif font-bold text-gray-900">
                Encontramos mais de uma peça
            </h2>
            <p class="mt-2 text-sm text-gray-600">
                O código <strong>#<%= codigo %></strong> aparece em mais de uma Figura.
                Por favor, selecione qual é a sua:
            </p>
        </div>

        <div class="mt-8 space-y-4">
            <% pecas.forEach(p => { %>
                <!-- O Link agora aponta direto para a CHAVE (/v/CHAVE) -->
                <a href="/v/<%= p.chave_acesso %>" class="group block relative rounded-lg border border-gray-300 bg-white px-6 py-5 shadow-sm flex items-center space-x-3 hover:border-cyan-500 hover:ring-1 hover:ring-cyan-500 focus:outline-none transition-all">
                    
                    <!-- Imagem da Figura -->
                    <div class="flex-shrink-0">
                        <img class="h-12 w-12 rounded-full object-cover border border-gray-200" 
                             src="<%= p.imagem_url || '/images/placeholder.jpg' %>" 
                             alt="<%= p.figura_nome %>">
                    </div>
                    
                    <!-- Texto -->
                    <div class="flex-1 min-w-0">
                        <span class="absolute inset-0" aria-hidden="true"></span>
                        <p class="text-base font-bold text-gray-900 group-hover:text-cyan-700">
                            <%= p.figura_nome %>
                        </p>
                        <% if (p.inscricao_base) { %>
                            <p class="text-sm text-gray-500 truncate">"<%= p.inscricao_base %>"</p>
                        <% } else { %>
                            <p class="text-sm text-gray-400 italic">Verificar autenticidade &rarr;</p>
                        <% } %>
                    </div>

                    <!-- Seta -->
                    <div class="flex-shrink-0 text-gray-400 group-hover:text-cyan-500">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                        </svg>
                    </div>
                </a>
            <% }) %>
        </div>

        <div class="text-center mt-6">
            <a href="/" class="font-medium text-cyan-600 hover:text-cyan-500 text-sm">
                &larr; Voltar e tentar outro código
            </a>
        </div>
    </div>
</div>

<%- include('../layouts/layout-bottom') %>