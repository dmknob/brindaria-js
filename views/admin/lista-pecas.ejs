<%- include('../layouts/layout-top') %>

<div class="max-w-5xl mx-auto py-8">
    
    <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-800">Peças Produzidas</h1>
            <p class="text-sm text-gray-500">Registro histórico de produção e autenticidade.</p>
        </div>
        <a href="/admin/pecas/nova" class="bg-amber-600 hover:bg-amber-700 text-white font-bold py-2 px-4 rounded shadow flex items-center gap-2">
            <span>+</span> Registrar Venda
        </a>
    </div>

    <div class="bg-gray-100 p-4 rounded-lg mb-6 flex items-center gap-3 border border-gray-200">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M3 3a1 1 0 011-1h12a1 1 0 011 1v3a1 1 0 01-.293.707L12 11.414V15a1 1 0 01-.293.707l-2 2A1 1 0 018 17v-5.586L3.293 6.707A1 1 0 013 6V3z" clip-rule="evenodd" /></svg>
        <span class="text-sm font-bold text-gray-700">Filtrar:</span>
        
        <select onchange="window.location.href='?modelo=' + this.value" class="p-2 border border-gray-300 rounded text-sm w-full md:w-64 focus:outline-none focus:border-amber-500">
            <option value="">Todas as Peças</option>
            <% modelos.forEach(m => { %>
                <option value="<%= m.id %>" <%= filtroModelo == m.id ? 'selected' : '' %>>
                    <%= m.nome %>
                </option>
            <% }) %>
        </select>
        
        <% if (filtroModelo) { %>
            <a href="/admin/pecas" class="text-xs text-red-600 hover:underline ml-2">Limpar Filtro</a>
        <% } %>
    </div>

    <div class="space-y-4 md:space-y-0">
        
        <% if (pecas.length === 0) { %>
            <div class="bg-white p-12 text-center rounded shadow text-gray-500 italic">
                Nenhuma peça encontrada com estes critérios.
            </div>
        <% } %>

        <% pecas.forEach(p => { %>
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition md:flex md:items-center md:justify-between p-4 md:p-0">
                
                <div class="md:p-4 md:flex-grow">
                    <div class="flex justify-between md:justify-start md:gap-4 items-center mb-2 md:mb-1">
                        <span class="font-mono font-bold text-amber-600 text-lg"><%= p.codigo_exibicao %></span>
                        <span class="text-xs font-bold uppercase tracking-wide text-gray-500 bg-gray-100 px-2 py-0.5 rounded">
                            <%= p.modelo_nome %>
                        </span>
                        
                        <span class="md:hidden text-xs text-gray-400 font-medium">
                            <%= formatarData(p.data_producao) %>
                        </span>
                    </div>

                    <div class="mb-2 md:mb-1">
                        <p class="font-bold text-gray-800 text-lg md:text-base leading-tight">
                            "<%= p.inscricao_base || 'Sem inscrição' %>"
                        </p>
                    </div>

                    <div>
                        <p class="text-sm text-gray-500 flex items-center gap-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
                            <%= p.cliente_nome %>
                        </p>
                    </div>
                </div>

                <div class="hidden md:block md:px-6 md:text-right w-40 border-l border-gray-100 h-full flex items-center justify-end">
                    <span class="text-sm text-gray-500 font-medium">
                        <%= formatarData(p.data_producao) %>
                    </span>
                </div>

                <div class="mt-4 md:mt-0 pt-4 md:pt-0 border-t md:border-t-0 md:border-l border-gray-100 flex gap-3 md:px-6 md:w-auto items-center">
                    
                    <a href="/admin/pecas/<%= p.id %>/editar" class="flex-1 md:flex-none bg-amber-50 hover:bg-amber-100 text-amber-700 py-2 px-4 rounded font-bold text-center text-sm transition border border-amber-200">
                        Editar
                    </a>

                    <a href="/pecas/espiritual/<%= p.modelo_slug %>/<%= p.codigo_exibicao.replace('#','') %>" target="_blank" class="flex-none bg-gray-50 hover:bg-gray-100 text-gray-600 p-2 rounded transition border border-gray-200" title="Ver Página Pública">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>
                    </a>
                </div>

            </div>
        <% }) %>
    </div>

    <% if (totalPages > 1) { %>
        <div class="mt-8 flex justify-center gap-2">
            <% if (currentPage > 1) { %>
                <a href="?page=<%= currentPage - 1 %>&modelo=<%= filtroModelo %>" class="px-4 py-2 border rounded bg-white hover:bg-gray-50">Anterior</a>
            <% } %>
            <span class="px-4 py-2 text-gray-500">Pág <%= currentPage %> de <%= totalPages %></span>
            <% if (currentPage < totalPages) { %>
                <a href="?page=<%= currentPage + 1 %>&modelo=<%= filtroModelo %>" class="px-4 py-2 border rounded bg-white hover:bg-gray-50">Próxima</a>
            <% } %>
        </div>
    <% } %>

</div>

<%- include('../layouts/layout-bottom') %>