<%- include('../layouts/layout-top') %>

<div class="max-w-4xl mx-auto py-8">
    
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-2xl font-bold text-gray-800">Categorias do Acervo</h1>
        <a href="/admin/dashboard" class="text-sm text-gray-500 hover:text-gray-800">← Voltar ao Painel</a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        
        <div class="md:col-span-1">
            <div class="bg-white p-6 rounded shadow border border-gray-200">
                <h2 class="text-lg font-bold text-gray-700 mb-4">Nova Categoria</h2>
                
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="bg-red-100 text-red-700 p-2 rounded text-sm mb-4">
                        Erro ao criar. Verifique se o nome já existe.
                    </div>
                <% } %>

                <form action="/admin/categorias" method="POST">
                    <div class="mb-4">
                        <label class="block text-sm font-bold text-gray-600 mb-2">Nome</label>
                        <input type="text" name="nome" required placeholder="Ex: Decorativo" 
                               class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-amber-500">
                        <p class="text-xs text-gray-400 mt-1">O link (URL) será gerado automaticamente.</p>
                    </div>
                    <button type="submit" class="w-full bg-gray-900 text-white font-bold py-3 rounded hover:bg-gray-800 transition">
                        Adicionar
                    </button>
                </form>
            </div>
        </div>

        <div class="md:col-span-2">
            <div class="bg-white shadow border border-gray-200 rounded overflow-hidden">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Nome</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">URL (Slug)</th>
                            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Itens</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        <% categorias.forEach(cat => { %>
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-800">
                                <%= cat.nome %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 font-mono">
                                /<%= cat.slug %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-600">
                                <span class="bg-gray-100 px-2 py-1 rounded text-xs font-bold">
                                    <%= mapContagem[cat.id] || 0 %>
                                </span>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

<%- include('../layouts/layout-bottom') %>