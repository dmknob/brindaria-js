<%- include('../layouts/layout-top') %>

<div class="max-w-4xl mx-auto py-6 md:py-10 px-4">
    
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-800">
            <%= peca ? 'Editar Peça' : 'Registrar Nova Peça' %>
        </h2>
        <a href="/admin/pecas" class="text-base text-gray-500 hover:text-gray-800 flex items-center gap-2 py-2 px-4 border border-gray-300 rounded bg-white">
            <span>←</span> Cancelar
        </a>
    </div>

    <form action="/admin/pecas/<%= peca ? peca.id + '/editar' : 'nova' %>" method="POST" class="bg-white p-6 md:p-8 rounded-xl shadow-sm space-y-8 border border-gray-200">
        
        <div class="border-b border-gray-100 pb-8">
            <h3 class="text-lg font-bold text-gray-800 mb-6 flex items-center gap-2">
                <span class="bg-amber-100 text-amber-800 w-8 h-8 rounded-full flex items-center justify-center text-sm font-bold">1</span>
                Dados da Peça
            </h3>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                
                <!-- FIGURA (Obrigatório) -->
                <div class="col-span-1">
                    <label class="block text-gray-700 font-bold mb-2 text-sm uppercase tracking-wide">Figura *</label>
                    <div class="relative">
                        <select name="figura_id" id="figuraSelect" required class="w-full p-4 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-500 bg-white text-base appearance-none">
                            <option value="" disabled <%= !peca ? 'selected' : '' %>>Selecione na lista...</option>
                            <% figuras.forEach(f => { %>
                                <option value="<%= f.id %>" <%= (peca && peca.figura_id === f.id) ? 'selected' : '' %>>
                                    <%= f.nome %>
                                </option>
                            <% }) %>
                        </select>
                        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-gray-700">
                            <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
                        </div>
                    </div>
                </div>

                <!-- CHAVE DE ACESSO (Obrigatório) -->
                <% if (!peca) { %>
                    <div class="lg:col-span-1 bg-amber-50 p-4 rounded-lg border border-amber-200">
                        <label class="block text-amber-800 font-bold mb-2 text-sm uppercase tracking-wide flex items-center gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                            </svg>
                            Chave de Acesso *
                        </label>
                        <select name="chave_acesso" class="w-full p-3 border border-amber-300 rounded focus:outline-none focus:border-amber-600 bg-white font-mono text-amber-900">
                            <option value="">-- Gerar Nova Automaticamente --</option>
                            <% if (locals.chavesReserva) { %>
                                <% chavesReserva.forEach(k => { %>
                                    <option value="<%= k.chave %>"><%= k.chave %> (Pré-gerada)</option>
                                <% }) %>
                            <% } %>
                        </select>
                    </div>
                <% } else { %>
                    <div class="lg:col-span-1">
                        <label class="block text-gray-400 font-bold mb-2 text-sm uppercase tracking-wide">Chave (Fixa)</label>
                        <input type="text" disabled value="<%= peca.chave_acesso %>" class="w-full p-4 bg-gray-100 border border-gray-200 rounded-lg text-gray-500 font-mono text-lg">
                    </div>
                <% } %>

                <!-- CÓDIGO (Opcional) -->
                <div>
                    <label class="block text-gray-700 font-bold mb-2 text-sm uppercase tracking-wide">Código (#)</label>
                    <input type="text" name="codigo_exibicao" value="<%= peca ? peca.codigo_exibicao : '' %>" placeholder="#000 (Opcional)" class="w-full p-4 border border-gray-300 rounded-lg font-mono font-bold text-amber-600">
                </div>

                <!-- INSCRIÇÃO NA BASE -->
                <div class="lg:col-span-2">
                    <label class="block text-gray-700 font-bold mb-2 text-sm uppercase tracking-wide">Inscrição na Base</label>
                    <input type="text" name="inscricao_base" value="<%= peca ? peca.inscricao_base : '' %>" placeholder="Ex: Protegei a Alicia" class="w-full p-4 border border-gray-300 rounded-lg font-bold text-gray-800 text-lg">
                </div>

                <!-- TAMANHO -->
                <div>
                    <label class="block text-gray-700 font-bold mb-2 text-sm uppercase tracking-wide">Tamanho</label>
                    <input type="text" name="tamanho" value="<%= peca ? peca.tamanho : '20cm' %>" class="w-full p-4 border border-gray-300 rounded-lg text-base">
                </div>

                <!-- MATERIAL -->
                <div>
                    <label class="block text-gray-700 font-bold mb-2 text-sm uppercase tracking-wide">Material</label>
                    <input type="text" name="material" value="<%= peca ? peca.material : 'Compósito Ecológico' %>" class="w-full p-4 border border-gray-300 rounded-lg text-base">
                </div>

                <!-- ACABAMENTO -->
                <div class="lg:col-span-2">
                    <label class="block text-gray-700 font-bold mb-2 text-sm uppercase tracking-wide">Acabamento</label>
                    <input type="text" name="acabamento" value="<%= peca ? peca.acabamento : 'Visual Mármore' %>" class="w-full p-4 border border-gray-300 rounded-lg text-base">
                </div>

                <!-- DATA DE PRODUÇÃO (Type Date) -->
                <div>
                    <label class="block text-gray-700 font-bold mb-2 text-sm uppercase tracking-wide">Data de Produção</label>
                    <input type="date" name="data_producao" 
                           value="<%= peca ? peca.data_producao : '' %>" 
                           placeholder="DD/MM/AAAA"
                           class="w-full p-4 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-500 bg-white text-base">
                </div>
            </div>
        </div>

        <!-- SEÇÃO 2: PERSONALIZAÇÃO -->
        <div>
            <h3 class="text-lg font-bold text-gray-800 mb-6 flex items-center gap-2">
                <span class="bg-amber-100 text-amber-800 w-8 h-8 rounded-full flex items-center justify-center text-sm font-bold">2</span>
                Dados do Presente (Opcional)
            </h3>
            <div class="space-y-6">
                <div>
                    <label class="block text-gray-700 font-bold mb-2 text-sm uppercase tracking-wide">Cliente</label>
                    <input type="text" name="cliente_nome" value="<%= peca ? peca.cliente_nome : '' %>" class="w-full p-4 border border-gray-300 rounded-lg">
                </div>
                <div>
                    <label class="block text-gray-700 font-bold mb-2 text-sm uppercase tracking-wide">Dedicatória</label>
                    <textarea name="mensagem" rows="5" class="w-full p-4 border border-gray-300 rounded-lg font-serif italic"><%= peca ? peca.mensagem : '' %></textarea>
                </div>
            </div>
        </div>

        <div class="pt-6">
            <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-5 rounded-xl shadow-lg text-xl">
                <%= peca ? 'Salvar Alterações' : 'Registrar Peça' %>
            </button>
        </div>
    </form>

    <% if (peca) { %>
        <div class="mt-12 pt-6 border-t border-gray-200 text-center">
            <form action="/admin/pecas/<%= peca.id %>/delete" method="POST" onsubmit="return confirm('ATENÇÃO: Tem certeza que deseja excluir esta peça?');">
                <button type="submit" class="text-red-500 hover:text-red-700 underline text-sm py-4">Excluir registro permanentemente</button>
            </form>
        </div>
    <% } %>
</div>

<!-- SCRIPT: Placeholder Visual -->
<% if (!peca) { %>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const select = document.getElementById('figuraSelect');
        const inputExibicao = document.getElementById('codExibicao');
        
        if (select && inputExibicao) {
            select.addEventListener('change', () => {
                if (select.value) inputExibicao.placeholder = "Digite o código...";
            });
        }
    });
</script>
<% } %>

<%- include('../layouts/layout-bottom') %>