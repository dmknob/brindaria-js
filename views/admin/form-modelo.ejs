<%- include('../layouts/layout-top') %>

<div class="max-w-4xl mx-auto py-8">
    
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800">
            <%= modelo ? 'Editar Modelo' : 'Novo Modelo' %>
        </h2>
        <a href="/admin/modelos" class="text-sm text-gray-500 hover:text-gray-800 flex items-center gap-1">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" /></svg>
            Cancelar e Voltar
        </a>
    </div>

    <form action="/admin/modelos/<%= modelo ? modelo.id + '/editar' : 'novo' %>" method="POST" class="bg-white p-8 rounded shadow space-y-8 border border-gray-200">
        
        <div class="border-b border-gray-100 pb-6">
            <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
                <span class="bg-gray-100 text-gray-600 w-6 h-6 rounded-full flex items-center justify-center text-xs">1</span>
                Identidade Principal
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                
                <div class="col-span-1">
                    <label class="block text-gray-700 font-bold mb-2">Nome do Modelo *</label>
                    <input type="text" id="nomeInput" name="nome" value="<%= modelo ? modelo.nome : '' %>" required 
                           class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-amber-500 font-bold text-gray-900 bg-gray-50">
                </div>
                
                <div>
                    <label class="block text-gray-700 font-bold mb-2">Categoria</label>
                    <select id="categoriaSelect" name="categoria_id" class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-amber-500 bg-white">
                        <% locals.categorias.forEach(cat => { %>
                            <option value="<%= cat.id %>" data-slug="<%= cat.slug %>" <%= (modelo && modelo.categoria_id === cat.id) ? 'selected' : '' %>>
                                <%= cat.nome %>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <div class="col-span-2">
                    <label class="block text-gray-700 font-bold mb-2">URL Amigável (Slug) *</label>
                    <div class="flex rounded border border-gray-300 overflow-hidden focus-within:border-amber-500 focus-within:ring-1 focus-within:ring-amber-500">
                        <span class="bg-gray-100 text-gray-500 px-3 py-3 text-sm font-mono border-r border-gray-300 hidden md:inline-flex items-center">
                            brindaria.com.br/pecas/<span id="prefixoCategoria">espiritual</span>/
                        </span>
                        <span class="bg-gray-100 text-gray-500 px-2 py-3 text-sm font-mono border-r border-gray-300 inline-flex md:hidden items-center">
                            /<span id="prefixoCategoriaMobile">...</span>/
                        </span>
                        
                        <input type="text" id="slugInput" name="slug" value="<%= modelo ? modelo.slug : '' %>" required
                               class="flex-grow p-3 focus:outline-none font-mono text-sm text-gray-700"
                               placeholder="sao-pedro-apostolo">
                    </div>
                    <p class="text-xs text-gray-400 mt-1">Use apenas letras minúsculas, números e traços. Ex: <code>sao-pedro-apostolo</code></p>
                </div>
                
                <div class="col-span-1">
                    <label class="block text-gray-700 font-bold mb-2">Subtítulo (Original/Latim)</label>
                    <input type="text" name="subtitulo" value="<%= modelo ? modelo.subtitulo : '' %>" placeholder="Ex: Angelus Custos" 
                           class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-amber-500">
                </div>
                
                <div>
                    <label class="block text-gray-700 font-bold mb-2">Coleção</label>
                    <input type="text" name="colecao" value="<%= modelo ? modelo.colecao : '' %>" placeholder="Ex: Guerreiros da Fé" 
                           class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-amber-500">
                </div>
            </div>
        </div>

        <div class="border-b border-gray-100 pb-6">
            <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
                <span class="bg-gray-100 text-gray-600 w-6 h-6 rounded-full flex items-center justify-center text-xs">2</span>
                Curadoria e Busca
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="col-span-2">
                    <label class="block text-gray-700 font-bold mb-2">Conhecido Como (Resumo SEO)</label>
                    <input type="text" name="conhecido_como" value="<%= modelo ? modelo.conhecido_como : '' %>" placeholder="Ex: O Príncipe da Milícia Celeste" class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-amber-500">
                </div>
                <div>
                    <label class="block text-gray-700 font-bold mb-2">Dia de Celebração</label>
                    <input type="text" name="dia_celebracao" value="<%= modelo ? modelo.dia_celebracao : '' %>" placeholder="Ex: 29 de Setembro" class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-amber-500">
                </div>
                <div>
                    <label class="block text-gray-700 font-bold mb-2">Variações de Nome (Tags)</label>
                    <input type="text" name="variacoes_nome" value="<%= modelo ? modelo.variacoes_nome : '' %>" placeholder="Ex: Miguel, Michael, Michel" class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-amber-500">
                </div>
                <div class="col-span-2">
                    <label class="block text-gray-700 font-bold mb-2">Invocado Para</label>
                    <input type="text" name="invocado_para" value="<%= modelo ? modelo.invocado_para : '' %>" placeholder="Ex: Proteção, Justiça" class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-amber-500">
                </div>
                <div class="col-span-2">
                    <label class="block text-gray-700 font-bold mb-2">Principais Locais de Devoção</label>
                    <input type="text" name="locais_devocao" value="<%= modelo ? modelo.locais_devocao : '' %>" placeholder="Ex: Basílica de São Pedro" class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-amber-500">
                </div>
            </div>
        </div>

        <div class="border-b border-gray-100 pb-6">
            <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
                <span class="bg-gray-100 text-gray-600 w-6 h-6 rounded-full flex items-center justify-center text-xs">3</span>
                Imagem do Modelo
            </h3>
            <% if (modelo && modelo.imagem_url) { %>
                <div class="mb-6 flex items-center gap-4 bg-gray-50 p-4 rounded border border-gray-200">
                    <img src="<%= modelo.imagem_url %>" class="h-24 w-24 object-cover rounded shadow bg-white">
                    <div>
                        <span class="block text-sm text-green-600 font-bold mb-1">Imagem Atual</span>
                        <span class="block text-xs text-gray-500 font-mono break-all"><%= modelo.imagem_url %></span>
                    </div>
                </div>
            <% } %>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-gray-700 font-bold mb-2">Opção A: Colar URL (Download)</label>
                    <input type="url" name="imagem_url_externa" placeholder="https://site.com/foto.jpg" class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-amber-500 font-mono text-sm">
                </div>
                <div>
                    <label class="block text-gray-700 font-bold mb-2">Opção B: Nome do Arquivo Local</label>
                    <input type="text" name="imagem_arquivo_manual" placeholder="Ex: sao-miguel.jpg" class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-amber-500 font-mono text-sm">
                </div>
            </div>
        </div>

        <div>
            <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
                <span class="bg-gray-100 text-gray-600 w-6 h-6 rounded-full flex items-center justify-center text-xs">4</span>
                Conteúdo Rico (HTML)
            </h3>
            <div class="mb-6">
                <label class="block text-gray-700 font-bold mb-2">História e Curiosidades</label>
                <textarea name="historia" rows="8" class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-amber-500 font-mono text-sm leading-relaxed"><%= modelo ? modelo.historia : '' %></textarea>
            </div>
            <div class="mb-6">
                <label class="block text-gray-700 font-bold mb-2">Detalhes Visuais / Iconografia</label>
                <textarea name="detalhes_visuais" rows="6" class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-amber-500 font-mono text-sm leading-relaxed"><%= modelo ? modelo.detalhes_visuais : '' %></textarea>
            </div>
            <div class="mb-6">
                <label class="block text-gray-700 font-bold mb-2">Oração</label>
                <textarea name="oracao" rows="4" class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-amber-500 italic bg-amber-50 text-gray-700"><%= modelo ? modelo.oracao : '' %></textarea>
            </div>
        </div>

        <div class="pt-4 border-t border-gray-200">
            <button type="submit" class="w-full bg-gray-900 text-white font-bold py-4 rounded hover:bg-gray-800 transition shadow-lg text-lg flex justify-center items-center gap-2">
                <% if (modelo) { %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                    Salvar Alterações
                <% } else { %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>
                    Cadastrar Modelo
                <% } %>
            </button>
        </div>
    </form>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const nomeInput = document.getElementById('nomeInput');
        const slugInput = document.getElementById('slugInput');
        const catSelect = document.getElementById('categoriaSelect');
        const prefixoDesk = document.getElementById('prefixoCategoria');
        const prefixoMob = document.getElementById('prefixoCategoriaMobile');
        
        // Variável para saber se estamos editando (se tiver valor inicial, é edição)
        const isEdicao = slugInput.value.trim() !== '';

        // 1. Atualiza o prefixo visual quando troca a categoria
        function atualizarPrefixo() {
            const selectedOption = catSelect.options[catSelect.selectedIndex];
            const slugCat = selectedOption.getAttribute('data-slug') || '...';
            prefixoDesk.textContent = slugCat;
            prefixoMob.textContent = slugCat;
        }
        catSelect.addEventListener('change', atualizarPrefixo);
        atualizarPrefixo(); // Roda no inicio

        // 2. Gera Slug Automático (Apenas na CRIAÇÃO ou se o slug estiver vazio)
        nomeInput.addEventListener('input', () => {
            if (isEdicao && slugInput.value !== '') return; // Não mexe se for edição

            const nome = nomeInput.value;
            // Função simples de slugify no front (sem bibliotecas pesadas)
            const slug = nome.toString().toLowerCase().trim()
                .normalize('NFD').replace(/[\u0300-\u036f]/g, '') // Remove acentos
                .replace(/\s+/g, '-')     // Espaços viram hifens
                .replace(/[^\w\-]+/g, '') // Remove caracteres especiais
                .replace(/\-\-+/g, '-');  // Hifens duplicados
            
            slugInput.value = slug;
        });
    });
</script>

<%- include('../layouts/layout-bottom') %>