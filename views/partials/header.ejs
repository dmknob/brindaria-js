<header class="bg-white shadow-sm border-b border-gray-100 sticky top-0 z-50 print:hidden">
    <div class="container mx-auto px-4 py-4 flex flex-col md:flex-row justify-between items-center gap-4">
        
        <a href="/" class="flex items-center gap-2 group">
            <img src="/images/ICONE.png" alt="Logo" class="w-8 h-8 opacity-90 group-hover:opacity-100 transition">
            <span class="font-sans font-medium tracking-wider text-xl text-gray-800 lowercase group-hover:text-cyan-600 transition">
                brindaria
            </span>
        </a>

        <nav class="flex flex-wrap justify-center items-center gap-4 md:gap-6 text-sm font-semibold text-gray-500 uppercase tracking-wide">
            
            <a href="/" class="hover:text-cyan-600 transition">Início</a>
            
            <a href="/pecas" class="hover:text-cyan-600 transition">Nossas Peças</a>
            
            <a href="/contato" class="hover:text-cyan-600 transition">Contato</a>
            
            <% if (locals.isAdmin) { %>
                <div class="hidden md:block w-px h-4 bg-gray-300 mx-2"></div>
                
                <div class="flex items-center gap-4 bg-gray-50 px-3 py-1 rounded-full border border-gray-200">
                    <a href="/admin/dashboard" class="text-amber-600 hover:text-amber-800 transition" title="Dashboard">Painel</a>
                    <a href="/admin/modelos" class="text-gray-600 hover:text-amber-600 transition">Modelos</a>
                    <a href="/admin/categorias" class="text-gray-600 hover:text-amber-600 transition">Categorias</a>
                    <a href="/admin/pecas" class="text-gray-600 hover:text-amber-600 transition">Peças</a>
                    
                    <a href="/admin/logout" class="text-red-500 hover:text-red-700 flex items-center gap-1 pl-2 border-l border-gray-200" title="Sair">
                        <span class="text-xs font-bold">SAIR</span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                        </svg>
                    </a>
                </div>
            <% } %>
        </nav>
    </div>
</header>